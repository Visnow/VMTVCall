<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/vm_round_radius_normal"/>
            <solid android:color="@color/vm_red_54"/>
        </shape>
    </item>
    <!--获取焦点-->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/vm_round_radius_normal"/>
            <solid android:color="@color/vm_red_87"/>
        </shape>
    </item>
    <!--正常状态-->
    <item>
        <shape>
            <corners android:radius="@dimen/vm_round_radius_normal"/>
            <solid android:color="@color/vm_red"/>
        </shape>
    </item>
</selector>