    <!--统一按钮样式-->
    <style name="AppBtn.Dialpad" parent="Widget.Leanback.DetailsActionButtonStyle">
        <!--文字大小-->
        <item name="android:textSize">@dimen/vm_size_btn_large</item>
        <!--文字颜色-->
        <item name="android:textColor">@color/vm_white</item>
        <!--文本对其方式-->
        <item name="android:textAlignment">center</item>
        <!--按钮宽度-->
        <item name="android:layout_width">@dimen/vm_dimen_72</item>
        <!--按钮高度-->
        <item name="android:layout_height">@dimen/vm_dimen_72</item>
        <!--按钮 Margin-->
        <item name="android:layout_margin">@dimen/vm_margin_small</item>
        <!--按钮背景样式-->
        <item name="android:background">@drawable/btn_shape_blue</item>
        <!--按钮 Z 轴高度-->
        <item name="android:elevation">@dimen/vm_elevation_low</item>
        <!--按钮字体样式-->
        <item name="android:textStyle">bold</item>
